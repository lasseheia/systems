{
  "mainBar": {
    "modules-left": [
      "hyprland/workspaces",
      "network"
    ],
    "modules-center": [
      "clock"
    ],
    "modules-right": [
      "cpu",
      "memory",
      "disk#root",
      "disk#home",
      "disk#nix",
      "pulseaudio",
      "bluetooth",
      "tray"
    ],
    "disk#nix": {
      "interval": 5,
      "format": "Nix {percentage_used}%",
      "path": "/nix"
    }
  }
}
